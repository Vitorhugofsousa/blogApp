{{#each postagens}}
<div class="card">
<div class="card-body">
    <h4>Editar Postagem</h4>
    <form action="/admin/postagens/edit" method="POST">
        <label for="titulo">TÃ­tulo: </label>
        <input type="hidden" name="id" value="{{id}}">
        <input type="text" name="titulo" class="form-control" value="{{titulo}}" required>
        <label for="slug">Slug: </label>
        <input type="text" name="slug" class="form-control" value="{{slug}}" required> 
        <label for="descricao">descricao: </label>
        <input type="text" name="descricao" class="form-control" value="{{descricao}}" required>
        <label for="conteudo">Conteudo: </label>
        <textarea name="conteudo" class="form-control" required>{{conteudo}}</textarea>
        <label for="categoria">Categoria: </label>
            {{/each}}
        <select name="categoria" class="form-select">
            {{#each categorias}}
            <option value="{{id}}">{{nome}}</option>
            {{else}}
            <option value="0">Nenhuma Categoria Registrada!</option>
            {{/each}}
        </select>
        <hr>
        <button type="submit" class="btn btn-success">Editar Postagem</button>
    </form>
</div>
</div>