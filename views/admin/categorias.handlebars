<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
<hr>

{{#each categorias}}

<div class="card mt-4">
    <div class="card-body" >
        <h4>{{nome}}</h4>
        <small>Slug: {{slug}}</small><br>
        <small>Data de criação: {{date}}</small> <hr>

        <div style="display: flex; flex-direction: row; gap: 4px;">
       <a href="/admin/categorias/edit/{{id}}"> <button class="btn btn-success">Editar Categoria</button></a>
       <form action="/admin/categorias/deletar" method="POST">
        <input type="hidden" name="id" value="{{id}}">
        <button type="submit" class="btn btn-danger"> Deletar Categoria</button>
       </form>
        </div>

    </div>
</div>
{{else}}
<h4 class="mt-4 card-body">Nenhuma categoria criada ainda!</h4>
{{/each}}